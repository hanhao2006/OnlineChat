<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image_search"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/ic_profile"/>
    
    <TextView
        android:id="@+id/username_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="user name"
        android:layout_toRightOf="@+id/profile_image_search"
        android:layout_centerInParent="true"
        android:layout_marginLeft="12dp"
        android:textSize="19sp"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/sign_online"
        android:layout_width="18dp"
        android:layout_height="18dp"
        app:civ_border_width="12dp"
        app:civ_border_color="#05df29"
        android:src="@drawable/ic_profile"
        android:layout_below="@id/username_search"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="-15dp"
        android:layout_toEndOf="@id/profile_image_search"
        android:layout_toRightOf="@id/username_search"
        android:visibility="gone"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/sign_offline"
        android:layout_width="18dp"
        android:layout_height="18dp"
        app:civ_border_width="12dp"
        app:civ_border_color="#D9DFDA"
        android:src="@drawable/ic_profile"
        android:layout_below="@id/username_search"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="-15dp"
        android:layout_toEndOf="@id/profile_image_search"
        android:layout_toRightOf="@id/username_search"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/message_last"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/username_search"
        android:layout_toRightOf="@+id/profile_image_search"
        android:layout_marginTop="14dp"
        android:layout_marginLeft="20dp"
        android:padding="16dp"
        android:maxLines="1"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="19sp"/>

</RelativeLayout>