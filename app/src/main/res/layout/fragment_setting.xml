<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".Fragments.SettingFragment">


   <androidx.cardview.widget.CardView
       android:id="@+id/cardView"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginTop="10dp">

       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:padding="10dp">

           <ImageView
               android:id="@+id/cover_image"
               android:layout_width="match_parent"
               android:layout_height="200dp"
               android:src="@drawable/cover"
               android:scaleType="centerCrop"/>

           <de.hdodenhof.circleimageview.CircleImageView
               android:id="@+id/setting_circleView"
               android:layout_width="150dp"
               android:layout_height="150dp"
               android:src="@drawable/profile_image"
               android:scaleType="centerCrop"
               android:layout_centerHorizontal="true"
               android:layout_marginTop="140dp" />

           <TextView
               android:id="@+id/userName_setting"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_below="@id/setting_circleView"
               android:text="User name"
               android:gravity="center"
               android:textSize="30sp"
               android:textColor="@color/colorPrimaryDark"
               android:textStyle="bold"/>'

           <ProgressBar
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_below="@+id/userName_setting"
               android:visibility="gone"/>

       </RelativeLayout>

   </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cardView"
        android:gravity="center"
        android:background="@color/colorProfile"
        android:layout_marginTop="40dp"
        android:orientation="horizontal"
        android:padding="6dp">

        <ImageView
            android:id="@+id/set_facebook"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/facebook"
            android:scaleType="centerCrop"
            android:layout_marginRight="35dp"
            android:layout_gravity="center"/>

        <ImageView
            android:id="@+id/set_instargram"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/instargram"
            android:scaleType="centerCrop"
            android:layout_marginRight="35dp"
            android:layout_gravity="center"/>
        <ImageView
            android:id="@+id/set_website"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/websit"
            android:scaleType="centerCrop"
            android:layout_gravity="center"/>

    </LinearLayout>

</RelativeLayout>